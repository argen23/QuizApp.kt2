<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tv_result_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/quiz_font</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_sub_result_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/quiz_font</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="TvCategory">
        <item name="android:layout_marginStart">@dimen/left_margin_category</item>
        <item name="android:layout_marginTop">@dimen/margin_q_amount</item>
        <item name="android:hint">@string/category</item>
        <item name="android:textColor">@color/teal_for_txt</item>
    </style>

    <style name="forSpinners">
        <item name="android:layout_width">@dimen/width_seekbar</item>
        <item name="android:layout_marginTop">@dimen/margin_q_amount</item>
        <item name="android:layout_marginStart">@dimen/spinner_right_dimen</item>
        <item name="android:background">@drawable/round</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>


</resources>